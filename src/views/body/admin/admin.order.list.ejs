<% orderItems.forEach(e => { %>
    <% if(e.STATE === 1) { %>
    <tr class="warning">
    <% } %>
    <% if(e.STATE === 2) { %>
    <tr class="active">
    <% } %>
    <% if(e.STATE === 3) { %>
    <tr class="success">
    <% } %>
        <td>
            <%= e.ID %>
        </td>
        <td>
            <%= e.ID_USER %>
        </td>
        <% const date = new Date(e.DATE_CREATED) %>
        <td>
            <%= date.getFullYear() + "/" + (+date.getMonth() + 1) + "/" + date.getDate() %>
        </td>
        <td>
            <div class=".detail-wrapper">
                <%- e.CONTENT %>
            </div>
        </td>
        <td>
            <%= e.TOTAL_COST %>
        </td>
        <td>
            <select class="form-control">
                <% if(e.STATE === 1) { %>
                <option value="pending" selected>Chưa giao</option>
                <option value="delivering">Đang giao hàng</option>
                <option value="done">Giao hàng thành công</option>
                <% } %>
                <% if(e.STATE === 2) { %>
                <option value="pending">Chưa giao</option>
                <option value="delivering" selected>Đang giao hàng</option>
                <option value="done">Giao hàng thành công</option>
                <% } %>
                <% if(e.STATE === 3) { %>
                <option value="pending">Chưa giao</option>
                <option value="delivering">Đang giao hàng</option>
                <option value="done" selected>Giao hàng thành công</option>
                <% } %>
            </select>
        </tr>
    </tr>
<% }) %>
<!-- Main content -->
<div class="row padding_bottom_big">
  <div class="col-sm-12">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <img src="./assets/media/images/flashsale.jpg" alt="Image Banner Cover" >
        </div>
        <div class="item">
          <img src="./assets/media/images/slide02.png" alt="Image Banner Cover"> 
        </div>
        <div class="item">
          <img src="./assets/media/images/slide03.png" alt="Image Banner Cover">
        </div>
        <div class="item">
          <img src="./assets/media/images/slide04.jpg" alt="Image Banner Cover">
        </div>
        <div class="item">
          <img src="./assets/media/images/slide05.jpg" alt="Image Banner Cover">
        </div>
        <div class="item">
          <img src="./assets/media/images/slide06.png" alt="Image Banner Cover">
        </div>
        <div class="item">
          <img src="./assets/media/images/slide01.jpg" alt="Image Banner Cover">
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

<div class="row padding_bottom_big item-cover-img">

        </div>
        <div class="item">
          <div class="row">
            <% for(let i = 8; i < news.length; i++) { %>
              <div class="col-sm-6 col-md-4 col-lg-3">
                <%- include('../thumbnail/thumbnail.ejs', { data: news[i], price}) %>              
              </div>
            <% } %>
          </div>
        </div>
      </div>
      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-new-book" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#carousel-new-book" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
  </div>
</div>



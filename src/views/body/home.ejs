        <li data-target="#carousel-new-book" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class="row">
            <% for(let i = 0; i <= 3; i++) { %>
              <div class="col-sm-6 col-md-4 col-lg-3">
                <%- include('../thumbnail/thumbnail.ejs', { data: news[i], price}) %>
              </div>
            <% } %>
          </div>
        </div>
        <div class="item">
          <div class="row">
            <% for(let i = 4; i <= 7; i++) { %>
              <div class="col-sm-6 col-md-4 col-lg-3">
                <%- include('../thumbnail/thumbnail.ejs', { data: news[i], price}) %>                
